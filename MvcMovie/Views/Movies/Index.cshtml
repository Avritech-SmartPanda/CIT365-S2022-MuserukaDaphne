@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Movies";
}

   <h1 class="my-4 title rounded-md ">@ViewData["Title"] </h1>

<p class="row">
    <a asp-action="Create" class=" btn w-32 bg-slate-900 text-white  my-4 ">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get"  class="grid  grid-cols-1 sm:grid-cols-4 gap-4 ">
    <p>
      Genre:   <select asp-for="MovieGenre" asp-items="Model.Genres" class="mb-3   border border-gray-300 rounded-md p-2 w-full rounded focus:outline-none focus:shadow-outline">
            <option value="">All</option>
        </select>
         </p>
        <p>
        Title: <input type="text" asp-for="SearchString" class="mb-3   border border-gray-300 rounded-md p-2 w-full rounded focus:outline-none focus:shadow-outline" />
           </p>
            <p  class="relative">
        <input type="submit" value="Filter" class="btn absolute bottom-5 w-32 bg-slate-900 text-white" /> 
    </p>
</form>

<table class="table mt-4">
    <thead>
        <tr  class="h-16">
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Title)
            </th>
            <th>    
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">
                       @Html.DisplayNameFor(model => model.Movies[0].Date)
                   </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr class="h-16">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-500">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-blue-500">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-blue-500">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
