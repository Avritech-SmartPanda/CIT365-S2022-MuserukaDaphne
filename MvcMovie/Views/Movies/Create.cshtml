@model MvcMovie.Models.MovieCreateViewModel

@{
    ViewData["Title"] = "New Movie";
}


    <h1 class="my-4 title">@ViewData["Title"] </h1>
<div class="container">
         <form asp-action="Create" enctype="multipart/form-data"  class="grid  grid-cols-1 sm:grid-cols-2 gap-4 w-10/12  mx-auto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title"  class="mb-3   border border-gray-300 rounded-md p-2 w-full rounded focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
                  <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating"   class="mb-3   border border-gray-300 rounded-md p-2 w-full rounded focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date"   class="mb-3   border border-gray-300 rounded-md p-2 w-full rounded focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">              
                   <label asp-for="Genre" class="control-label"></label>
                <select asp-for="Genre"   class="mb-3   border border-gray-300 rounded-md p-2 w-full rounded focus:outline-none focus:shadow-outline" >
                    <option value="" selected="selected">Select genre</option>
                    <option value="Family">Family</option>
                    <option value="Drama">Drama</option>
                    <option  value="Comedy">Comedy</option>
                    <option value="Adventure">Adventure</option>
                      <option value="Documentary">Documentary</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price"   class="mb-3   border border-gray-300 rounded-md p-2 w-full rounded focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           <div class="form-group">
               <div class="custom-file">
                    <label asp-for="Image" class="custom-file-label">Choose File...</label>
                    <input asp-for="Image" class="form-control  custom-file-input" />
                </div>
            </div>
            <div class=" my-4">
                <input type="submit" value="Create" class="btn w-96 bg-slate-900 text-white" />
            </div>
        </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
